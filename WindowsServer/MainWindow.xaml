<Window x:Class="WindowsServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="640" ResizeMode="NoResize" Background="Black">
    <Grid x:Name="GridMain" HorizontalAlignment="Left" Height="387" VerticalAlignment="Top" Width="630" RenderTransformOrigin="0.508,0.491">
        <Button x:Name="ServerStart" Content="Button" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Width="105" Height="40" Background="Black" BorderBrush="#FFF77E1B" Foreground="#FFF77E1B" RenderTransformOrigin="0.5,0.5" Click="ServerStart_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
    
